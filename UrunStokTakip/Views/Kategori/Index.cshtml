
@model List<UrunStokTakip.Models.Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<a href="/Kategori/Ekle" class="btn btn-primary">Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        @if (User.IsInRole("A"))
        {
            <th>Sil</th>
            <th>Düzenle</th>
        }


    </tr> @foreach (var item in Model)
    {
        <tr>
            <td>@item.Ad</td>
            <td>@item.Aciklama</td>

            @if (User.IsInRole("A"))
            {
                //Sil İsim Delete kontrolurdeki kod
                <th>@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('" + item.Ad + " " + "Silmek istediğinizden eminmisiniz')" })</th>
                <th><a href="/Kategori/Guncelle/@item.Id" class="btn btn-warning">Düzenle</a></th>
            }
        </tr>
    }
</table>


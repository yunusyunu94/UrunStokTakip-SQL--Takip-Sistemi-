
@model List<UrunStokTakip.Models.Sepet>
@{
    ViewBag.Title = "HehsiniSatinAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="container">
        <h2>Merhaba @Session["Ad"] @Session["Soyad"]</h2>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm("HehsiniSatinAl", "Satislar", FormMethod.Post, new { @class = "container" }))
    {
        foreach (var item in Model)
        {
            <div class="form-group">
                <h5>ID: @Html.DisplayFor(x => item.Id)</h5>
            </div>

            <div class="form-group">
                <h5>Ürün Adı: @Html.DisplayFor(x => item.Urun.Ad)</h5>
            </div>

            <div class="form-group">
                <h5>Adet: @Html.DisplayFor(x => item.Adet)</h5>
            </div>

            <div class="form-group">
                <h5>Fiyat: @Html.DisplayFor(x => item.Fiyat)</h5>
            </div>

            <div class="form-group">
                <h5>Resim: <img src="~/Content/Img/@item.Urun.Resim" width="50" height="50" /></h5>
            </div>
        }
    }
</div>


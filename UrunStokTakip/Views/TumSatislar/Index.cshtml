
@using PagedList;
@using PagedList.Mvc;

@model PagedList<UrunStokTakip.Models.Satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/NiceAdmin/css/bootstrap.min.css" rel="stylesheet" />

<h2>Satışlar</h2>
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Tarih</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Urun.Ad</td>
                <td>@item.Adet</td>
                <td>@item.Fiyaf</td>
                <td><img src="~/Content/Img/@item.Urun.Resim" width="90" height="90" /></td>,
                <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>
<br />
@Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic);

